<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.yanghanwen.taskmanagementmonster.MyTaskActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/biddingBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="100dp"
            android:text="Bidded" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/assignedBtn"
            android:text="assigned"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="80dp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/RequesterTask"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:scrollbars="vertical" />


    <ListView
        android:id="@+id/requesterBiddingListView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:scrollbars="vertical" />

    <ListView
        android:id="@+id/requesterAssignedListView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        android:scrollbars="vertical" />



</LinearLayout>