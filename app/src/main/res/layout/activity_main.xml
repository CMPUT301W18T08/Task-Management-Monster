<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yanghanwen.taskmanagementmonster.MainActivity">

    <Button
        android:id="@+id/requestor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:text="requestor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:onClick="onRequesterClicked"/>

    <Button
        android:id="@+id/provider"
        android:layout_width="98dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="provider"
        app:layout_constraintStart_toStartOf="@+id/requestor"
        app:layout_constraintTop_toBottomOf="@+id/requestor"
        android:onClick="onProviderClicked" />
</android.support.constraint.ConstraintLayout>
